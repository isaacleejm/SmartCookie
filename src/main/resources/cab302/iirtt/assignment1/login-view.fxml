<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" prefWidth="1280.0" prefHeight="720.0"
            style="-fx-background-color: linear-gradient(to bottom, #D8DBEB, #83A9E3);">

    <!-- White login container -->
    <Pane layoutX="413" layoutY="69" prefWidth="417" prefHeight="597"
          style="-fx-background-color: #F8F8F8; -fx-background-radius: 12;">

        <!-- Logo Image -->
        <ImageView fx:id="logo" fitWidth="209" fitHeight="174"
                   layoutX="104" layoutY="-8"
                   pickOnBounds="true" preserveRatio="true">
            <image>
                <javafx.scene.image.Image url="@smartcookie.png" />
            </image>
        </ImageView>

        <!-- Sign In Label -->
        <Label text="Sign in" layoutX="21" layoutY="175"
               style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-font-family: 'Inter';" />

        <!-- Email Label -->
        <Label text="Email" layoutX="25" layoutY="227"
               style="-fx-font-size: 20px; -fx-font-family: 'Inter';" />

        <!-- Email Field -->
        <TextField fx:id="emailField" layoutX="20" layoutY="252" prefWidth="377" prefHeight="48"
                   style="-fx-background-color: #D9D9D9;" />

        <!-- Password Label -->
        <Label text="Password" layoutX="25" layoutY="318"
               style="-fx-font-size: 20px; -fx-font-family: 'Inter';" />

        <!-- Password Field -->
        <PasswordField fx:id="passwordField" layoutX="20" layoutY="343" prefWidth="377" prefHeight="48"
                       style="-fx-background-color: #D9D9D9;" />

        <!-- Sign In Button -->
        <Button fx:id="signInButton" text="Sign in" layoutX="20" layoutY="404" prefWidth="377" prefHeight="48"
                style="-fx-background-color: #1935CA; -fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;" />

        <!-- Forgot Password Link -->
        <Hyperlink fx:id="forgotPasswordLink" text="Forgot your password? Click here."
                   layoutX="20" layoutY="469"
                   style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: black;" />

        <!-- Create New Account Button -->
        <Button fx:id="createAccountButton" text="Create new account" layoutX="20" layoutY="511" prefWidth="377" prefHeight="48"
                style="-fx-background-color: #1935CA; -fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" />

    </Pane>
</AnchorPane>